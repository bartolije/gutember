{% extends 'AppBundle::base.html.twig' %}

{% block body %}

    <table class="table">
        <caption>Themes</caption>
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Summary</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>

        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.summary }}</td>
                <td>{{ book.author }}</td>
                <td>
                    <a href="{{ path('book_edit', { 'id': book.id }) }}">Edit</a> /
                    <a href="{{ path('book_delete', { 'id': book.id }) }}">Delete</a> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}