{% extends 'AppBundle::base.html.twig' %}


{% block body %}

    {% include "AppBundle:Default:menu.html.twig" %}
    <!-- ========== NAVBAR ========== -->
    <div class="main">
        <div class="container">
            <link rel='stylesheet prefetch'
                  href='http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css'>
            <div class="mail-box">
                <aside class="sm-side">
                    <div class="user-head">
                        <a class="inbox-avatar" href="javascript:;">
                            <img width="64" hieght="60"
                                 src="http://bootsnipp.com/img/avatars/ebeb306fd7ec11ab68cbcaa34282158bd80361a7.jpg">
                        </a>
                        <div class="user-name">
                            <h6>{{ app.user.username }}</h6>
                            <span>{{ app.user.email }}</span>

                        </div>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}

                        <ul class="nav nav-pills nav-stacked labels-info inbox-divider">
                            <li><h4>Panel Administrateur</h4></li>
                            <li><a href="#"> <i class=" fa fa-sign-blank text-danger"></i>Gestion des utilisateurs </a>
                            </li>

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-haspopup="true" aria-expanded="false"><i
                                            class=" fa fa-sign-blank text-danger"></i> Gestion des Livres<span
                                            class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('book_index') }}">Voir les Livres</a></li>
                                    <li><a href="{{ path('book_create') }}">Ajouter des Livres</a></li>
                                </ul>
                            </li>

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-haspopup="true" aria-expanded="false"><i
                                            class=" fa fa-sign-blank text-danger"></i> Gestion des thèmes<span
                                            class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('theme_index') }}">Voir les thèmes</a></li>
                                    <li><a href="{{ path('theme_create') }}">Ajouter des thèmes</a></li>
                                </ul>
                            </li>

                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-haspopup="true" aria-expanded="false"><i
                                            class=" fa fa-sign-blank text-danger"></i> Gestion des catégories<span
                                            class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('category_index') }}">Voir les categories</a></li>
                                    <li><a href="{{ path('category_create') }}">Ajouter des categories</a></li>
                                </ul>
                            </li>
                            <li><a href="#"> <i class=" fa fa-sign-blank text-primary "></i> Gestion des rôles </a>
                            </li>
                        </ul>
                    {% endif %}
                    {% if is_granted('ROLE_USER', 'ROLE_ADMIN') %}

                        <ul class="nav nav-pills nav-stacked labels-info inbox-divider">
                            <li><h4>Preference</h4></li>
                            <li class="active">
                                <a href="{{ path('fos_user_profile_edit') }}"><i class="fa fa-inbox"></i> Edit Profile
                                    <span
                                            class="label label-danger pull-right">A</span></a>

                            </li>
                            <li>
                                <a href="#"><i class="fa fa-envelope-o"></i> Votre collection</a>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-bookmark-o"></i>Ajout de Livre</a>
                            </li>
                            <li>
                                <a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-bookmark-o"></i>Déconnexion</a>
                            </li>
                        </ul>

                    {% endif %}
                </aside>
                <!-- ========== END NAVBAR ========== -->
                <!-- ========== MAIN ========== -->
                <div class="container">
                    <div class="inbox-body">
                        <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
                        <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
                    </div>
                </div>
                <!-- ========== END MAIN ========== -->

            </div>
        </div>
    </div>




    {% include "AppBundle:Default:footer.html.twig" %}

{% endblock %}