{% extends 'AppBundle::base.html.twig' %}

{% block body %}

   <h1>Bienvenue dans le Book-Panel</h1>

    <table class="table">

    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Edit/Delete</th>
    </tr>

    {% for theme in themes %}
        <tr>
            <td>{{ theme.id }}</td>
            <td>{{ theme.name }}</td>
            <td><a href="{{ path('theme_edit', { 'id': theme.id }) }}">Edit</a> /<a href="{{ path('theme_delete', { 'id': theme.id }) }}">Delete</a> </td>
        </tr>

        <a href="{{ path('theme_create', { 'id': theme.id }) }}">Ajouter un theme</a>
    {% endfor %}

{% endblock %}